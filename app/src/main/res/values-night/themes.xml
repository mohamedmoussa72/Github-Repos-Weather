<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="SmallTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/small_text_12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:autoLink">all</item>
        <item name="background">?attr/selectableItemBackground</item>
    </style>
    <style name="LargeTextView" parent="SmallTextView">
        <item name="android:textSize">@dimen/large_text_16sp</item>
    </style>
    <style name="LargeTextView.PrimaryColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14.00sp</item>
    </style>
</resources>